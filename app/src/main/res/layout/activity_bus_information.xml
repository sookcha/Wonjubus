<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sookcha.wonjubus.BusInformationActivity">

    <Space android:layout_width="match_parent" android:layout_height="10dp" android:id="@+id/space"
           android:background="@color/pink_500"
           android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" android:text="Large Text"
              android:id="@+id/busNumberText"
              android:textSize="30dp" android:layout_below="@+id/space" android:layout_alignParentLeft="true"/>
    <ListView android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/busInfoList"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true" android:layout_below="@+id/busNumberText"/>

</RelativeLayout>
