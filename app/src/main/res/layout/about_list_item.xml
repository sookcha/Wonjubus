<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:id="@+id/busListLayout">
    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sectionText" android:textColor="#000000" android:textSize="20dp"
            android:layout_marginLeft="15dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/contentText" android:textColor="@color/grey_black_1000" android:textSize="15dp"
            android:layout_marginLeft="15dp"/>

    <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            />


</LinearLayout>